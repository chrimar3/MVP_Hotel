{
  "name": "mvp-hotel-review-generator",
  "version": "1.1.0",
  "description": "Professional hotel review generator with automated testing",
  "main": "src/ultimate-ux-enhanced.html",
  "scripts": {
    "test": "jest --config config/jest.config.js",
    "test:watch": "jest --config config/jest.config.js --watch",
    "test:coverage": "jest --config config/jest.config.js --coverage",
    "test:ci": "jest --config config/jest.config.js --ci --coverage --watchAll=false",
    "lint": "eslint 'src/**/*.js'",
    "format": "prettier --write 'src/**/*.{js,json,css,html}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrimar3/MVP_Hotel.git"
  },
  "keywords": [
    "hotel",
    "review",
    "generator",
    "puppeteer",
    "testing",
    "accessibility"
  ],
  "author": "Chris Maragkoudakis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chrimar3/MVP_Hotel/issues"
  },
  "homepage": "https://github.com/chrimar3/MVP_Hotel#readme",
  "devDependencies": {
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/user-event": "^14.6.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "puppeteer": "^24.0.0"
  }
}
