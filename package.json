{
  "name": "mvp-hotel-review-generator",
  "version": "2.0.0",
  "description": "Lightweight hotel review generator supporting multiple platforms and languages",
  "main": "public/index.html",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "start": "npx http-server public -p 3000 -o",
    "dev": "webpack serve --mode=development --open",
    "build": "npm run lint && npm run test:unit && npm run test:integration && npm run build:prod",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production",
    "analyze": "webpack --mode=production --analyze",
    "analyze:bundle": "node scripts/analyze-bundle.js",
    "perf:ci": "node scripts/performance-ci.js",
    "perf:baseline": "node scripts/performance-ci.js --update-baseline",
    "perf:budget": "npm run build:prod && npm run analyze:bundle",
    "perf:lighthouse": "lhci autorun",
    "perf:audit": "npm run perf:budget && npm run perf:lighthouse",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:ci": "jest --config jest.config.js --ci --coverage --watchAll=false",
    "test:unit": "jest --config jest.config.js tests/unit",
    "test:integration": "jest --config jest.config.js tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:e2e:ci": "playwright test --reporter=github",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "eslint 'src/**/*.js' --fix",
    "format": "prettier --write 'src/**/*.{js,json,css,html}'",
    "format:check": "prettier --check 'src/**/*.{js,json,css,html}'",
    "clean": "rm -rf dist coverage node_modules test-results playwright-report",
    "serve": "python3 -m http.server 3000 --directory public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrimar3/MVP_Hotel.git"
  },
  "keywords": [
    "hotel",
    "review",
    "generator",
    "puppeteer",
    "testing",
    "accessibility"
  ],
  "author": "Chris Maragkoudakis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chrimar3/MVP_Hotel/issues"
  },
  "homepage": "https://github.com/chrimar3/MVP_Hotel#readme",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "axe-playwright": "^2.1.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@lhci/cli": "^0.12.0",
    "babel-loader": "^9.1.3",
    "compression-webpack-plugin": "^10.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-security": "^3.0.1",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.1.1",
    "puppeteer": "^24.17.1",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 85,
        "statements": 85
      }
    },
    "testMatch": [
      "**/tests/unit/**/*.test.js",
      "**/tests/integration/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tests/e2e/"
    ]
  }
}
