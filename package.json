{
  "name": "mvp-hotel-review-generator",
  "version": "2.0.0",
  "description": "Lightweight hotel review generator supporting multiple platforms and languages",
  "main": "public/index.html",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "start": "npx http-server public -p 3000 -o",
    "dev": "npx http-server public -p 3000 -c-1 --cors",
    "build": "npm run lint && npm run test",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:ci": "jest --config jest.config.js --ci --coverage --watchAll=false",
    "test:unit": "jest --config jest.config.js tests/unit",
    "test:integration": "jest --config jest.config.js tests/integration",
    "test:e2e": "jest --config jest.config.js tests/e2e",
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "eslint 'src/**/*.js' --fix",
    "format": "prettier --write 'src/**/*.{js,json,css,html}'",
    "format:check": "prettier --check 'src/**/*.{js,json,css,html}'",
    "clean": "rm -rf dist coverage node_modules",
    "serve": "python3 -m http.server 3000 --directory public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrimar3/MVP_Hotel.git"
  },
  "keywords": [
    "hotel",
    "review",
    "generator",
    "puppeteer",
    "testing",
    "accessibility"
  ],
  "author": "Chris Maragkoudakis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chrimar3/MVP_Hotel/issues"
  },
  "homepage": "https://github.com/chrimar3/MVP_Hotel#readme",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1",
    "puppeteer": "^24.17.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 85,
        "statements": 85
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
