# Environment Configuration for MVP Hotel Review Generator

# Application Configuration
NODE_ENV=production
PORT=8080
HEALTH_CHECK_HOST=localhost
HEALTH_CHECK_PORT=8080

# Domain Configuration
DOMAIN_NAME=mvp-hotel.example.com
BASE_URL=https://mvp-hotel.example.com

# Database Configuration (if enabled)
DATABASE_URL=postgresql://app_user:password@localhost:5432/mvp_hotel
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=mvp_hotel
DATABASE_USER=app_user
DATABASE_PASSWORD=secure_password_change_me
DATABASE_SSL=true
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration (if enabled)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
SECRETS_MANAGER_ARN=arn:aws:secretsmanager:region:account:secret:name

# API Keys (stored in Secrets Manager in production)
OPENAI_API_KEY=sk-your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
CLAUDE_API_KEY=your_claude_key_here

# Session and Security
SESSION_SECRET=your_super_secret_session_key_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# CORS Configuration
CORS_ORIGIN=https://mvp-hotel.example.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/mvp-hotel/app.log
ENABLE_ACCESS_LOG=true

# Monitoring and Analytics
MONITORING_ENABLED=true
PROMETHEUS_METRICS=true
HEALTH_CHECK_INTERVAL=30
ERROR_TRACKING_DSN=your_sentry_dsn_here

# CDN Configuration
CLOUDFRONT_DOMAIN=d1234567890.cloudfront.net
S3_BUCKET=mvp-hotel-static-assets
STATIC_ASSETS_URL=https://d1234567890.cloudfront.net

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=smtp_password
SMTP_FROM=MVP Hotel <noreply@example.com>

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_COMPRESSION=true
ENABLE_SECURITY_HEADERS=true
ENABLE_API_RATE_LIMITING=true
ENABLE_REVIEW_GENERATION=true
ENABLE_USER_FEEDBACK=true

# Development/Testing
DEV_MODE=false
DEBUG_MODE=false
MOCK_API_RESPONSES=false
BYPASS_RATE_LIMITING=false

# Security Configuration
TRUST_PROXY=true
HELMET_CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline' https://api.openai.com
SECURE_COOKIES=true
COOKIE_SAME_SITE=strict

# Performance Configuration
ENABLE_GZIP=true
STATIC_CACHE_TTL=31536000
API_CACHE_TTL=300
WORKER_TIMEOUT=30

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=mvp-hotel-backups

# Notification Configuration
ALERT_EMAIL=admin@example.com
SLACK_WEBHOOK_URL=your_slack_webhook_url
PAGERDUTY_TOKEN=your_pagerduty_token

# Load Balancer Health Check
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=3

# Container Configuration
CONTAINER_MEMORY_LIMIT=512M
CONTAINER_CPU_LIMIT=0.5
GRACEFUL_SHUTDOWN_TIMEOUT=30

# External Service Timeouts
API_TIMEOUT=10000
DATABASE_TIMEOUT=5000
REDIS_TIMEOUT=2000

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System maintenance in progress. Please try again later.

# Metrics and Observability
METRICS_PORT=9090
METRICS_PATH=/metrics
ENABLE_DISTRIBUTED_TRACING=true
TRACE_SAMPLE_RATE=0.1