# Environment Configuration Template
# Copy this file to .env.local and customize for your environment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application environment (development, staging, production)
NODE_ENV=development

# Application URL and port
APP_URL=http://localhost:3000
PORT=3000

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Base URL
API_BASE_URL=https://api.hotelreviews.ai
API_VERSION=v1

# API Rate Limiting
API_RATE_LIMIT=1000

# =============================================================================
# AI/ML SERVICE CONFIGURATION
# =============================================================================

# OpenAI Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Custom AI Service
AI_SERVICE_URL=https://ai.hotelreviews.ai
AI_SERVICE_API_KEY=your_ai_service_key

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (if using database)
DATABASE_URL=postgresql://user:password@localhost:5432/hotel_reviews

# Redis Cache (if using caching)
REDIS_URL=redis://localhost:6379

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_SAMPLE_RATE=0.1

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration (if using authentication)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRY=24h

# API Keys for external services
PLATFORM_API_KEYS='{
  "tripadvisor": "your_tripadvisor_key",
  "booking": "your_booking_key",
  "google": "your_google_key"
}'

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Docker Configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_TAG=latest

# CDN Configuration
CDN_URL=https://cdn.hotelreviews.ai
STATIC_ASSETS_URL=https://assets.hotelreviews.ai

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
FEATURE_AI_GENERATION=true
FEATURE_MULTI_LANGUAGE=true
FEATURE_PERFORMANCE_TRACKING=true
FEATURE_OFFLINE_MODE=true

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Email Service (Sendgrid, SES, etc.)
EMAIL_SERVICE_API_KEY=your_email_service_key
FROM_EMAIL=noreply@hotelreviews.ai

# File Upload Service
UPLOAD_SERVICE_URL=https://upload.hotelreviews.ai
UPLOAD_SERVICE_KEY=your_upload_key

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Debugging
DEBUG=hotel-reviews:*
LOG_LEVEL=info

# Development tools
WEBPACK_BUNDLE_ANALYZER=false
SOURCE_MAPS=true

# Testing
TEST_TIMEOUT=10000
HEADLESS_BROWSER=true

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================

# GitHub Actions
GITHUB_TOKEN=your_github_token
CODECOV_TOKEN=your_codecov_token

# Deployment Keys
NETLIFY_SITE_ID=your_netlify_site_id
NETLIFY_AUTH_TOKEN=your_netlify_token

# Container Registry
CONTAINER_REGISTRY_TOKEN=your_registry_token