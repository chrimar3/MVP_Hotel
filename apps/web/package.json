{
  "name": "@hotel-reviews/web",
  "version": "3.0.0",
  "private": true,
  "description": "Hotel Review Generator - Web Application",
  "main": "index.html",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "webpack serve --config ../../tools/config/webpack.config.js --mode=development --open",
    "build": "npm run lint && npm run test:unit && npm run test:integration && npm run build:prod",
    "build:dev": "webpack --config ../../tools/config/webpack.config.js --mode=development",
    "build:prod": "webpack --config ../../tools/config/webpack.config.js --mode=production",
    "analyze": "webpack --config ../../tools/config/webpack.config.js --mode=production --analyze",
    "analyze:bundle": "node ../../tools/scripts/analyze-bundle.js",
    "test": "jest --config ../../tools/config/jest.config.js",
    "test:watch": "jest --config ../../tools/config/jest.config.js --watch",
    "test:coverage": "jest --config ../../tools/config/jest.config.js --coverage",
    "test:ci": "jest --config ../../tools/config/jest.config.js --ci --coverage --watchAll=false",
    "test:unit": "jest --config ../../tools/config/jest.config.js ../../tests/unit",
    "test:integration": "jest --config ../../tools/config/jest.config.js ../../tests/integration",
    "test:e2e": "playwright test --config ../../tools/config/playwright.config.js",
    "test:e2e:headed": "playwright test --config ../../tools/config/playwright.config.js --headed",
    "test:e2e:debug": "playwright test --config ../../tools/config/playwright.config.js --debug",
    "test:e2e:ui": "playwright test --config ../../tools/config/playwright.config.js --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:e2e:ci": "playwright test --config ../../tools/config/playwright.config.js --reporter=github",
    "lint": "eslint '**/*.js' --config ../../tools/config/.eslintrc.js",
    "lint:fix": "eslint '**/*.js' --config ../../tools/config/.eslintrc.js --fix",
    "format": "prettier --config ../../tools/config/.prettierrc --write '**/*.{js,json,css,html}'",
    "format:check": "prettier --config ../../tools/config/.prettierrc --check '**/*.{js,json,css,html}'",
    "perf:ci": "node ../../tools/scripts/performance-ci.js",
    "perf:baseline": "node ../../tools/scripts/performance-ci.js --update-baseline",
    "perf:budget": "npm run build:prod && npm run analyze:bundle",
    "perf:lighthouse": "lhci autorun --config ../../.lighthouserc.js",
    "perf:audit": "npm run perf:budget && npm run perf:lighthouse",
    "clean": "rm -rf dist coverage test-results playwright-report",
    "serve": "npx http-server dist -p 3000 -o"
  },
  "dependencies": {
    "@hotel-reviews/core": "workspace:*",
    "@hotel-reviews/ui": "workspace:*", 
    "@hotel-reviews/utils": "workspace:*"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/user-event": "^14.6.1",
    "axe-playwright": "^2.1.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@lhci/cli": "^0.12.0",
    "babel-loader": "^9.1.3",
    "compression-webpack-plugin": "^10.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-security": "^3.0.1",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "puppeteer": "^24.17.1",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "workbox-webpack-plugin": "^7.0.0"
  }
}