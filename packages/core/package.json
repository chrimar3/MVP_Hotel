{
  "name": "@hotel-reviews/core",
  "version": "3.0.0",
  "description": "Core business logic and services for hotel review generation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "babel src --out-dir dist --extensions .js,.ts",
    "build:esm": "babel src --out-dir dist --extensions .js,.ts --config-file ./babel.esm.config.js --out-file-extension .esm.js",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "test": "jest --config ../../tools/config/jest.config.js --testPathPattern=packages/core",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "lint": "eslint 'src/**/*.{js,ts}' --config ../../tools/config/.eslintrc.js",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "hotel-reviews",
    "text-generation",
    "ai-services",
    "review-templates"
  ],
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "@hotel-reviews/utils": "workspace:*"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}